<Application
    x:Class="Notes.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Notes">

    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ContentMaterialLow" Color="#1b1b1b"/>
            <SolidColorBrush x:Key="ContentMaterialHigh" Color="#1f1f1f"/>

            <Style TargetType="InkToolbarBallpointPenButton">
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="SelectedBrushIndex" Value="1"/>
                <Setter Property="SelectedStrokeWidth" Value="2"/>
            </Style>

            <Style TargetType="InkToolbarPencilButton">
                <Setter Property="SelectedBrushIndex" Value="1"/>
                <!--<Setter Property="SelectedStrokeWidth" Value="4"/>-->
            </Style>

            <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>